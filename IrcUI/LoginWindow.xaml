<Window x:Class="IrcUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrcUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="nick" HorizontalAlignment="Left" Height="30" Margin="20,57,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="224"/>
        <TextBox x:Name="user" HorizontalAlignment="Left" Height="30" Margin="20,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
        <Label x:Name="label" Content="Nick name:" HorizontalAlignment="Left" Margin="18,26,0,0" VerticalAlignment="Top" Width="109"/>
        <Label x:Name="label1" Content="User name:" HorizontalAlignment="Left" Margin="18,103,0,0" VerticalAlignment="Top"/>
        <Button x:Name="login" Click="login_Click" Content="Log in" HorizontalAlignment="Left" Margin="99,209,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
